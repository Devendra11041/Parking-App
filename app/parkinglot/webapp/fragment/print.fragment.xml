<!-- ParkingFormFragment.fragment.xml -->
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="idprintparking"
        title="Parking Lot Allocation Form"
        resizable="true"
        draggable="true"
        contentWidth="60%"
        contentHeight="50%"
    >
        <content>
            <f:SimpleForm
                id="idSimpleForm"
                layout="ResponsiveGridLayout"
                editable="true"
                title="Parking Lot Allocation Form with XYZ Warehouse"
            >
                <f:content>
                    <Label
                        text="Vehicle Number"
                        class="bold-red-label"
                        width="120px"
                        id="labelprint1"
                    />
                    <Text
                        text="{localModel>/VehicalDeatils/vehicalNo}"
                        id="textprint1"
                    />

                    <Label
                        text="Driver Name"
                        class="bold-red-label"
                        width="120px"
                        id="labelprint2"
                    />
                    <Text
                        text="{localModel>/VehicalDeatils/driverName}"
                        id="textprint2"
                    />

                    <Label
                        text="Driver Phone Number"
                        class="bold-red-label"
                        width="120px"
                        id="labelprint3"
                    />
                    <Text
                        text="{localModel>/VehicalDeatils/phone}"
                        id="textprint3"
                    />

                    <Label
                        text="Vehicle Type"
                        class="bold-red-label"
                        width="120px"
                        id="labelprint4"
                    />
                    <Text
                        text="{localModel>/VehicalDeatils/vehicalType}"
                        id="textprint4"
                    />

                    <Label
                        text="Parking Lot Number"
                        class="bold-red-label"
                        width="120px"
                        id="labelprint5"
                    />
                    <Text
                        text="{localModel>/VehicalDeatils/plotNo_plot_NO}"
                        id="textprint5"
                    />

                    <Label
                        text="Entry Date"
                        class="bold-red-label"
                        width="120px"
                        id="labelprint6"
                    />
                    <Text
                        text="{localModel>/VehicalDeatils/assignedDate}"
                        id="textprint6"
                    />
                </f:content>
            </f:SimpleForm>
        </content>
        <buttons>
            <Button
                id="saveButton"
                text="Save"
                press="onSavePress"
            />
            <Button
                id="createButton"
                text="Print"
                press="onprint"
            />
            <Button
                id="cancelButton"
                text="Cancel"
                press="onCloseDialog"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
